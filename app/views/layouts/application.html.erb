<!DOCTYPE html>
<html>
  <!-- When submit the form, the view rendered will be the index view of our articles resource -->
  <%= form_tag(meetups_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Meetups" %>
      <form action="">
    <input type="submit" value="Find that Meetup!">
</form>
  <% end %>
<head>
  <title>Meetups</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<p class="flash"><%= flash.notice %></p>


<%= yield %>

<!DOCTYPE html>

<div>
      <h3>
        <% if logged_in? %>
          <%= "Logged in as #{current_user.username}" %>
          <%= link_to "(logout)", logout_path %>
        <% else %>
          <%= link_to "(login)", login_path %> | <%= link_to "(register)", new_author_path %>
        <% end %>
      </h3>
</div>

</body>
</html>
